<config>
	<modules>
		<Mbs_Abandonedcart>
			<version>1.0.0</version>
		</Mbs_Abandonedcart>
	</modules>
	<adminhtml>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<mbs_options>
											<title>Abandoned Cart Email Options</title>
										</mbs_options>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<global>
		<models>
			<abandonedcart>
				<class>Mbs_Abandonedcart_Model</class>
				<resourceModel>abandonedcart_resource</resourceModel>
			</abandonedcart>
			<abandonedcart_resource>
				<class>Mbs_Abandonedcart_Model_Resource</class>
				<entities>
					<abandonedcart>
						<table>abandonedcart</table>
					</abandonedcart>
				</entities>
			</abandonedcart_resource>
		</models>
 
		<resources>
			<abandonedcart_setup>
				<setup>
					<module>Mbs_Abandonedcart</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</abandonedcart_setup>
			<abandonedcart_read>
				<connection>
					<use>core_read</use>
				</connection>
			</abandonedcart_read>
			<abandonedcart_write>
				<connection>
					<use>core_write</use>
				</connection>
			</abandonedcart_write>
		</resources>
 
		<blocks>
			<mbs_abandonedcart>
				<class>Mbs_Abandonedcart_Block</class>
			</mbs_abandonedcart>
		</blocks>
 
		<helpers>
			<mbs_abandonedcart>
				<class>Mbs_Abandonedcart_Helper</class>
			</mbs_abandonedcart>
		</helpers>
	</global>
 
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<Mbs_Abandonedcart after="Mage_Adminhtml">Mbs_Abandonedcart</Mbs_Abandonedcart>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<crontab>
	  <jobs>
		  <abandonedcart_cron>
			  <schedule>
				  <cron_expr>*/5 * * * *</cron_expr>
			  </schedule>
			  <run>
				  <model>mbs_abandonedcart/observer::sendReminderEmails</model>
			  </run>
		  </abandonedcart_cron>
	  </jobs>
	</crontab>
</config>